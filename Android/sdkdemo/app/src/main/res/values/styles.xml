<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/font_dark</item>
        <item name="colorPrimaryDark">@color/font_dark</item>
        <item name="colorAccent">@color/font_dark</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/font_dark</item>
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/font_dark</item>
        <item name="colorPrimaryDark">@color/font_dark</item>
        <item name="colorAccent">@color/font_dark</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="Theme.ActivityAnim" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="progressbar_style1">
        <item name="android:maxWidth">50.0dip</item>
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>
    <!-- Activity跳转动画 -->
    <style name="ActivityAnim" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_anim_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="topLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:background">@null</item>
    </style>
    <!--设备列表顶部标题 文字 -->
    <style name="topMiddle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--设备列表顶部标题 加号 -->
    <style name="topRight_plus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">45dp</item>
    </style>

    <!--设备列表顶部标题 四路按钮 -->
    <style name="topRight_fourway">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <!-- 页面字体 -->
    <style name="pageFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="redFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!--日历的dialog -->
    <style name="CalendarDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--日历标题 -->
    <style name="main_bar_text_style">
        <item name="android:textColor">#5ec6f6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:padding">30dp</item>
    </style>

    <!-- 语音对讲对话框 -->
    <style name="dialog_speech_theme" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="PPSDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_line_vertical">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="yx_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:drawablePadding">@dimen/dp8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="yx_edit_default_normal">
        <item name="android:textColor">@color/text_common</item>
        <item name="android:textColorHint">@color/text_common_hint</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="img_style_small_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_marginTop">@dimen/margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_big</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <style name="text_normal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="text_normal_dark_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="text_normal_gray_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="text_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="text_small_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="text_big_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="text_big_style_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="text_big_style_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/little_white</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>
    <!-- 项目中的分割线 -->
    <style name="viewline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#DADADA</item>
    </style>
    <!--通用对话框模式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="activity_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_anim_out</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CheckBabayBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_region_baby</item>
    </style>

    <style name="playCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="playMusicCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_play_snop</item>
    </style>

    <style name="common_line_horizontal">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/push_up_out</item> <!-- 指定消失的动画xml -->
    </style>

    <style name="MyDialogStyle" parent="android:style/Theme.Dialog">

        <!-- 有无边框 -->
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置有无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CheckRegionBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_region</item>
    </style>


</resources>
