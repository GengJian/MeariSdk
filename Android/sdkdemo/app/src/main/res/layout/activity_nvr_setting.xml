<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/settingTitles"
        layout="@layout/activity_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48" />

    <ScrollView
        android:layout_below="@id/settingTitles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp8"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="#f9f9f9">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:text="@string/preview_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp35"
                    android:background="@drawable/shape_circur">


                    <EditText
                        android:id="@+id/setting_aliasText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:maxLength="20"
                        android:paddingLeft="31dp"
                        android:paddingRight="31dp"
                        android:textCursorDrawable="@drawable/edittext_cursor" />

                    <ImageView
                        android:id="@+id/setting_alias_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:src="@mipmap/icon_select_p" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp20"
                    android:text="@string/pps_userAccount"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/dp18" />


                <TextView
                    android:id="@+id/useraccount_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_toRightOf="@id/text_owner"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:inputType="text"
                    android:maxLength="32"

                   android:singleLine="true"
                    android:textColor="#919191"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    style="@style/common_line_vertical"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sn_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp20"
                    android:gravity="center"
                    android:text="@string/sn"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/uuid_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_toRightOf="@id/text_sn_title"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="text"
                    android:maxLength="20"
                   android:singleLine="true"
                    android:textColor="#919191"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    style="@style/common_line_vertical"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/camera_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/came_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp8"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/came_img"
                    android:layout_toRightOf="@id/came_img"
                    android:text="@string/camera_list"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp16"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_arrow_right_n" />

                <ImageView
                    style="@style/common_line_vertical"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/share_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp8"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image_share"
                    android:layout_toRightOf="@id/image_share"
                    android:text="@string/share_title"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp16"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_arrow_right_n" />

                <ImageView
                    style="@style/common_line_vertical"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update_device_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:layout_below="@id/alarmContent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/update_device_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp8"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_version" />

                <TextView
                    android:id="@+id/updata_device_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/update_device_img"
                    android:layout_toRightOf="@id/update_device_img"
                    android:text="@string/updata"
                    android:textColor="@color/font_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/update_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/updata_device_text"
                    android:src="@mipmap/video_icon_rec"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/updata_right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp16">

                    <ImageView
                        android:id="@+id/version_loading"
                        android:src="@drawable/dialog_anim"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:contentDescription="@string/app_meari_name"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_toRightOf="@id/version_loading" />

                    <ImageView
                        android:id="@+id/version_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/version_loading"
                        android:contentDescription="@string/app_meari_name"
                        android:src="@mipmap/ic_arrow_right_n" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_toLeftOf="@id/updata_right_layout"
                    android:textColor="#919191"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    style="@style/common_line_vertical"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/sd_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp66"
                android:layout_below="@id/alarmContent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sdImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp8"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_hard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/sdImg"
                    android:layout_toRightOf="@id/sdImg"
                    android:text="@string/title_rormat_hard"
                    android:textColor="@color/font_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/id_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:contentDescription="@string/app_meari_name"
                    android:src="@mipmap/ic_arrow_right_n" />
            </RelativeLayout>

            <ImageView
                style="@style/common_line_vertical"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
